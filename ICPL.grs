rule r1 {
pattern { N[form = "ʧáː", upos = "AUX", Gloss = "3SG.CPL", ] }
commands { N.Gloss = "3SG.ICPL"; }
}

rule r2 {
pattern { N[form = "ʧáː", upos = "AUX", Gloss = "3SG.ICPL" ] }
commands { N.lemma = "ʧiká"; }
}

rule r3 {
pattern { N[form = "ʧǎː", lemma = "ʧǎː", upos = "AUX", Gloss = "3PL.ICPL", ] }
commands { N.lemma = "ʧìká"; }
}



strat main {
	Seq (
	Onf (r1) ,
	Onf (r2) ,
	Onf (r3) ,	
)}
